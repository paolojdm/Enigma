@model EditProfileViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Profile</title>
    <link rel="stylesheet" href="~/css/Account/Account_Base.css">
</head>
<body>
    <h2>Edit Profile</h2>

    <form asp-action="EditProfile" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" disabled /> <!-- UserName is not editable -->
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled /> <!-- Email is not editable -->
        </div>

        <div class="form-group">
            <label asp-for="ShippingAddress"></label>
            <input asp-for="ShippingAddress" class="form-control" />
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>

        <!-- Payment Information Section -->
        <h3>Payment Information</h3>

        <div class="form-group">
            <label asp-for="CardType"></label>
            <input asp-for="CardType" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CardOwner"></label>
            <input asp-for="CardOwner" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CardNumber"></label>
            <input asp-for="CardNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CardCVC"></label>
            <input asp-for="CardCVC" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ExpirationDate"></label>
            <input asp-for="ExpirationDate" type="date" class="form-control" />
        </div>

        <div class="account-btns">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>

</body>
</html>