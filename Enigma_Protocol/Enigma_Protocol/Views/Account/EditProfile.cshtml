@model EditProfileViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Edit Profile</title>
        <link rel="stylesheet" href="~/css/Account/Account_Base.css">
    </head>
    <body>
        <h2>Edit Profile</h2>

        <form asp-action="EditProfile" method="post">
            @Html.AntiForgeryToken()

            <!-- Displaying username and email as read-only -->
            <div class="form-group">
                <label>User Name (not editable)</label>
                <input value="@Model.UserName" class="form-control" readonly /> <!-- Not editable -->
                <input type="hidden" asp-for="UserName" /> <!-- Hidden input to pass UserName to the server -->
            </div>

            <div class="form-group">
                <label>Email (not editable)</label>
                <input value="@Model.Email" class="form-control" readonly /> <!-- Not editable -->
                <input type="hidden" asp-for="Email" /> <!-- Hidden input to pass Email to the server -->
            </div>

            <div class="form-group">
                <label asp-for="ShippingAddress"></label>
                <input asp-for="ShippingAddress" class="form-control" value="@(Model.ShippingAddress ?? string.Empty)" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>

            <!-- Payment Information Section -->
            <h3>Payment Information</h3>

            <div class="form-group">
                <label asp-for="CardType"></label>
                <input asp-for="CardType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CardOwner"></label>
                <input asp-for="CardOwner" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CardNumber"></label>
                <input asp-for="CardNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CardCVC"></label>
                <input asp-for="CardCVC" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate"></label>
                <input asp-for="ExpirationDate" type="date" class="form-control" />
            </div>

            <div class="account-btns">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

    </body>
</html>