<!-- File: Views/Account/Login.cshtml -->
@model LoginViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/Account/Account_Base.css">
</head>
<body>


    <h2>Login</h2>

    <form asp-action="Login" method="post">
        <div class="table">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="table">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="table">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe">Remember Me</label>
        </div>
        <div class="account-btns">
            <button type="submit">Login</button>
        </div>
        <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
    </form>

    
</body>
</html>