@model MyAccountViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>My account</title>
    <link rel="stylesheet" href="~/css/Account/Account_Base.css">
</head>
<body>
    <h2>My Account</h2>

    <div>
        <p><strong>Username:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Shipping Address:</strong> @(string.IsNullOrEmpty(Model.ShippingAddress) ? "Not Provided" : Model.ShippingAddress)</p>
        <p><strong>Member Since:</strong> @Model.CreatedAt.ToShortDateString()</p>
        <p><strong>Solved Puzzles:</strong> @Model.SolvedPuzzlesCount</p>
    </div>

    <hr />

    <!-- Links to Cart and Edit Profile pages -->
    <div class="account-btns">
		<form>
        <a class="btn btn-primary" href="/Cart">View Cart</a>
        </form>
        <form>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        </form>
		<form>
        <a class="btn btn-secondary" asp-action="EditProfile" asp-controller="Account">Edit Profile</a>
        </form>
        <form id="logoutbtn" class="btn-lgt" asp-action="Logout" asp-controller="Account" method="post">
            <button class="btn btn-logout" type="submit">Logout</button>
        </form>

        

    </div>
</body>
</html>

