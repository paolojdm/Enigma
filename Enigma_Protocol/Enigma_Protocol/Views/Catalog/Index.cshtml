@model IEnumerable<CatalogViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Product Catalog</title>
</head>
<body>

    <h2>Product Catalog</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Type</th>
                <th>Quantity Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.ProductType</td>
                    <td>@item.QuantityAvailable</td>
                    <td>
                        <!-- Bottone per i dettagli del prodotto -->
                        <a href="@Url.Action("ProductDetails", "Catalog", new { id = item.ProductId })" class="btn btn-info">
                            View Details
                        </a>

                    <td>
                        <!-- Add "Add to Cart" button visible only if the user is logged in -->
                            @if (User.Identity.IsAuthenticated)
                            {
                            <form method="post" action="@Url.Action("AddToCart", "Cart", new { productId = item.ProductId })">
                                <button type="submit" class="btn btn-success">Add to Cart</button>
                            </form>
                            }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


