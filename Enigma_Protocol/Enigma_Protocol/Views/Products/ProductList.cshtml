@model IEnumerable<Product>

<div>
    <!-- Add Product Button -->
    <a asp-action="ProductForm" class="btn btn-primary">Add Product</a>
</div>
<a href="@Url.Action("InventoryList", "Inventory")" class="btn btn-secondary">Manage Inventory</a> <!-- Link to Inventory List -->

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity Available</th>
            <th>Quantity Reserved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Inventories.FirstOrDefault()?.QuantityAvailable</td>
                <td>@product.Inventories.FirstOrDefault()?.QuantityReserved</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="EditInventory" asp-route-productId="@product.Id">Manage Inventory</a>
                </td>
            </tr>
        }
    </tbody>
</table>