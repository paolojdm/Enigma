@model IEnumerable<Enigma_Protocol.Models.CatalogViewModel>
@{
    Layout = "_Layout";  // Use your layout
    ViewData["Title"] = "Product List";  // Set the page title
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Product List</title>
    <link rel="stylesheet" href="~/css/Account/Account_Base.css">
</head>
<body>
    <h2>Product List</h2>

    @if (Model.Any())  // Check if there are any products
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th>Quantity Available</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.ProductDescription</td>
                        <td>@item.Price.ToString("C")</td> <!-- Format as currency -->
                        <td>@item.ProductType</td>
                        <td>@item.QuantityAvailable</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products available.</p>
    }

    <p>
        <a href="@Url.Action("Index", "Catalog")">Continue Shopping</a>  <!-- Link back to home or products page -->
    </p>
</body>
</html>