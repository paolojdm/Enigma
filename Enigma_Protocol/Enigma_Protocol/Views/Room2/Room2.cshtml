<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Puzzle Game - Room 2</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/Rooms/Room2.css">
    <script src="/js/room2/room2scr.js?v=1.3" defer></script>
</head>
<body>


    <div class="container2">
        <div class="button-container">
            <div>
                <h2>Lives: <span id="currentLives">@ViewBag.CurrentLives</span></h2>
                <h1 id="globalTimer">Time: 10:00</h1>
            </div>
            <button id="primoPiattoButton" class="btn btn-primary clue-btn" data-toggle="modal" data-target="#primoPiattoModal">1</button>
            <button id="secondoPiattoButton" class="btn btn-danger puzzle-btn" data-toggle="modal" data-target="#secondoPiattoModal">3</button>
            <button id="napkin2Button" class="btn btn-info clue-btn" data-toggle="modal" data-target="#secondNapkinModal">2</button>
        </div>
    </div>

    <!-- Existing Modals -->
    <div class="modal fade" id="primoPiattoModal" tabindex="-1" role="dialog" aria-labelledby="primoPiattoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="primoPiattoModalLabel">Primo Piatto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="/Images/Napkin1.jpg" alt="Napkin Puzzle" class="img-fluid" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="secondNapkinModal" tabindex="-1" role="dialog" aria-labelledby="secondNapkinModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="secondNapkinModalLabel">Secondo Piatto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="/Images/Napkin.jpg" alt="Second Napkin Puzzle" class="img-fluid" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="secondoPiattoModal" tabindex="-1" role="dialog" aria-labelledby="secondoPiattoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="secondoPiattoModalLabel">Secondo Piatto</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="codeForm" method="post">
                        <div class="form-group">
                            <label for="word">Inserisci la parola:</label>
                            <input type="text" name="word" id="word" class="form-control" required />
                        </div>
                        <button type="button" class="btn btn-success" onclick="submitCode()">Invia</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Background Audio Element -->
    <audio id="backgroundAudio" autoplay loop>
        <source src="/Music/Prologo.mp3" type="audio/mp3"> <!-- Adjust the audio file path for each room -->
        Your browser does not support the audio element.
    </audio>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>