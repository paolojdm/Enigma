@{
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <h1>Meet Our Development Team</h1>
    <div class="team-list">
        <div class="team-member">
            <img src="/Images/zPPleo.jpg" alt="Leonardo Di Carlo" class="team-photo" />
            <h2>Leonardo Di Carlo</h2>
            <p>Project Manager - Backend Developer</p>
        </div>
        <div class="team-member">
            <img src="/Images/zPPedo.jpg" alt="Edoardo Travaglini" class="team-photo" />
            <h2>Edoardo Travaglini</h2>
            <p>Frontend Developer</p>
        </div>
        <div class="team-member">
            <img src="/Images/zPPgianluca.jpg" alt="Gianluca Donadeo" class="team-photo" />
            <h2>Gianluca Donadeo</h2>
            <p>Frontend Developer</p>
        </div>
        <div class="team-member">
            <img src="/Images/zPPigor.jpg" alt="Igor Segala" class="team-photo" />
            <h2>Igor Segala</h2>
            <p>Frontend Developer</p>
        </div>

        <div class="team-member">
            <img src="/Images/zPPpaolo.jpg" alt="Paolo Urgesi" class="team-photo" />
            <h2>Paolo Urgesi</h2>
            <p>Frontend Developer</p>
        </div>
        <div class="team-member">
            <img src="/Images/zPPvov.jpg" alt="Volodymyr Prystupa" class="team-photo" />
            <h2>Volodymyr Prystupa</h2>
            <p>Fullstack Developer</p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        text-align: center;
        padding: 20px;
        max-width: 900px;
        margin: 50px auto;
    }

    h1 {
        font-size: 3em; /* Increased font size */
        margin-bottom: 50px;
        color: #bb86fc;
    }

    .team-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .team-member {
        background-color: #1e1e1e;
        border: 1px solid #2e2e2e;
        border-radius: 12px;
        padding: 30px; /* Increased padding */
        width: 260px; /* Increased width */
        margin: 20px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .team-member:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
    }

    .team-photo {
        border-radius: 50%;
        width: 150px; /* Increased image size */
        height: 150px; /* Increased image size */
        border: 5px solid #bb86fc;
        margin-bottom: 20px; /* Increased margin */
        transition: border-color 0.3s ease;
    }

    .team-member:hover .team-photo {
        border-color: #03dac6;
    }

    h2 {
        color: #ffffff;
        font-size: 1.8em; /* Increased font size */
        margin: 15px 0;
    }

    p {
        color: #b0b0b0;
        font-size: 1.2em; /* Increased font size */
    }
</style>