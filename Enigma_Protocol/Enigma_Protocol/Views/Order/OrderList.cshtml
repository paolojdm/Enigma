@model IEnumerable<Enigma_Protocol.Models.OrderViewModel>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>My Orders</title>
</head>
<body>
    <h1>My Orders</h1>

    @if (Model.Any())
    {
        <ul>
            @foreach (var order in Model)
            {
                <li>
                    <h3>Order #@order.OrderId - @order.OrderDate.ToString("dd/MM/yyyy")</h3>
                    <p>Total Amount: @order.TotalAmount.ToString("C")</p>
                    <p>Status: @order.ShippingStatus</p>

                    <h4>Order Details:</h4>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>
                                @detail.ProductName - Quantity: @detail.Quantity, Unit Price: @detail.UnitPrice.ToString("C")
                            </li>
                        }
                    </ul>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No orders found.</p>
    }
</body>
</html>